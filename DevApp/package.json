{
  "version": "1.0.0",
  "name": "dotnetify-website",
  "private": true,
  "scripts": {
    "build": "webpack",
    "build-prod": "webpack -p --env production",
    "prod": "webpack -p --progress && dotnet publish -c Release",
    "dist": "webpack --config ./webpack.dist.config.js",
    "pretty": "prettier --write \"./{src,client}/**/*.{ts,tsx,js,json,vue}\""
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      "babel-plugin-styled-components",
      "babel-plugin-transform-object-rest-spread",
      "babel-plugin-transform-class-properties"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "arrowParens": "avoid",
    "tabWidth": 2,
    "singleQuote": false
  },
  "dependencies": {
    "@aspnet/signalr": "^1.1.4",
    "@aspnet/signalr-protocol-msgpack": "^1.1.0",
    "@types/node": "^14.0.1",
    "chartjs-plugin-streaming": "~1.7.1",
    "dotnetify-elements": "^1.4.0",
    "jquery": "~3.4.1",
    "jquery-deferred": "^0.3.1",
    "jsdom": "^16.2.2",
    "knockout": "~3.5.0",
    "react": "^16.9.0",
    "react-chartjs-2": "~2.7.4",
    "react-dom": "^16.9.0",
    "vue": "~2.5.17",
    "whatwg-fetch": "^2.0.4"
  },
  "devDependencies": {
    "@types/react": "^16.9.35",
    "aspnet-webpack": "~3.0.0",
    "awesome-typescript-loader": "~5.1.0",
    "babel-core": "~6.26.3",
    "babel-loader": "~7.1.4",
    "babel-plugin-styled-components": "~1.5.1",
    "babel-plugin-transform-class-properties": "~6.24.1",
    "babel-plugin-transform-object-rest-spread": "~6.26.0",
    "babel-preset-env": "~1.7.0",
    "babel-preset-react": "~6.24.1",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "~0.28.11",
    "file-loader": "~1.1.11",
    "html-loader": "~0.5.5",
    "mini-css-extract-plugin": "~0.4.0",
    "prettier": "2.0.5",
    "style-loader": "~0.21.0",
    "svg-url-loader": "^2.3.2",
    "ts-loader": "^7.0.4",
    "typescript": "^3.9.2",
    "url-loader": "~1.0.1",
    "vue-loader": "~15.4.2",
    "vue-template-compiler": "^2.5.17",
    "webpack": "~4.12.0",
    "webpack-cli": "~3.0.8",
    "webpack-dev-middleware": "~3.1.3",
    "webpack-hot-middleware": "~2.22.2"
  }
}
